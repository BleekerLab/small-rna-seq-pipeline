    "import pandas as pd\n",
    "from Bio import SeqIO\n",
    "\n",
    """
    With this class unnamed miRNAs predicted by ShortStack can be annotated.
    Input: fasta file with miRNA annotation (from miRBase), results file from ShortStack run.
    Usage: first initialize class. Make sure the files are in the same directory as the script. 
        -path:str   the ShS results.txt.
        -fasta:str  the annotated mirna fasta.
        -species:list   the species in order of most related to less related to your species of interest. Well conserved
        miRNAs will get the annotation of the closest related availabe annotation.
        -plant:str  your species of interest of which you use the results.txt file.
    Important: the annotate annotate_mirna_shs_dict() function will have a no name list. This contains all the unannotated 
    small RNAs (not present on miRBase). These small RNAs can be given a temporary name an saved in a temp_df.txt file. With
    this file the function can be rerun and the final function can then be used.
    """ 
    "\n",
    "class AnnotateMatureMirna(object):\n",
    "    def __init__(self, path, fasta, species, plant):\n",
    "        self.path = path\n",
    "        self.fasta = fasta\n",
    "        self.species = species\n",
    "        self.plant = plant\n",
    "\n",
    "        \n",
    "    def mature_fasta(self):\n",
    "        global df\n",
    "        \n",
    "        fasta = self.fasta\n",
    "        with open(fasta) as fasta_file:\n",
    "            identifiers = []\n",
    "            sequences = []\n",
    "    \n",
    "            for seq_record in SeqIO.parse(fasta_file, 'fasta'):\n",
    "                identifiers.append(seq_record.id)\n",
    "                sequences.append(str(seq_record.seq))\n",
    "        \n",
    "        df = pd.DataFrame(\n",
    "            {'ID': identifiers,\n",
    "             'MajorRNA': sequences}\n",
    "            )\n",
    "        df.to_csv('all_df.txt', index = False)\n",
    "        return df\n",
    "    \n",
    "    def known_mir_per_species(self):\n",
    "        df = self.mature_fasta()\n",
    "        mir_per_species = df\n",
    "        species = self.species\n",
    "        \n",
    "        # Create df of only a specific species, eg sly (tomato), mature miRNA seqs and IDs\n",
    "        mir_per_species['species'] = mir_per_species['ID'].str.extract('(...-)', expand = True)\n",
    "        dfs = {}\n",
    "        for sp in species:\n",
    "            df_name = str(sp)\n",
    "            df_name = mir_per_species[mir_per_species.species == str(sp)+'-']\n",
    "            dfs.update({str(sp): df_name})\n",
    "        \n",
    "        return dfs\n",
    "    \n",
    "    def list_unique_miRNA_shs(self):\n",
    "        species = self.species\n",
    "        dfs = self.known_mir_per_species()\n",
    "         \n",
    "        for onespecies in species:\n",
    "            # Create a list of all unique sequences in the species specific fasta df\n",
    "            name = str(onespecies) + '_unique_sequences_fasta'\n",
    "            name = []\n",
    "            for seq in dfs[onespecies].MajorRNA:\n",
    "                if seq not in name:\n",
    "                    name.append(seq)\n",
    "            \n",
    "            # Create a list of all IDs which have a particular mature miRNA sequence\n",
    "            name_two = str(onespecies) + '_list_annotations'\n",
    "            name_two = []\n",
    "            for seq in name:\n",
    "                df = dfs[onespecies]\n",
    "                IDs = df[df.MajorRNA == seq].ID.values.tolist()\n",
    "                name_two.append(IDs)\n",
    "            \n",
    "            #Create df from dict of known annotated mature miRNA\n",
    "            name_three = str(onespecies) + '_df'\n",
    "            name_three_file = str(name_three) + '.txt'\n",
    "            name_three = pd.DataFrame(\n",
    "                {'ID': name_two,\n",
    "                'MajorRNA': name,\n",
    "                'species': onespecies}\n",
    "                )\n",
    "            name_three.to_csv(name_three_file, index = False)\n",
    "    \n",
    "    def select_data_shs(self):\n",
    "        global mir_df\n",
    "        path = self.path \n",
    "        mir_df = pd.read_csv(path, sep = '\\t')\n",
    "        mir_df = mir_df[mir_df.MIRNA == 'Y']\n",
    "        mir_df = mir_df[['#Locus', 'Name', 'MajorRNA', 'Reads', 'MIRNA']]\n",
    "        return mir_df\n",
    "    \n",
    "    def annotate_mirna_shs_dict(self):\n",
    "        global species\n",
    "        global mega_dictionary\n",
    "        global annotated_names\n",
    "        \n",
    "        species = self.species\n",
    "        species.extend(['temp', 'all'])\n",
    "        dfs = {}\n",
    "        names = []\n",
    "        \n",
    "        for sp in species:\n",
    "            name = sp + '_df'\n",
    "            name = pd.read_csv(str(name +'.txt'), sep = ',')\n",
    "            names.append(str(sp + '_df'))\n",
    "            dfs.update({str(sp + '_df'): name})\n",
    "        \n",
    "        species.append('mir_df')\n",
    "          \n",
    "        steps = len(species)\n",
    "        mega_dictionary = {}\n",
    "        mega_dictionary['mir_df'] = mir_df\n",
    "        annotated_names = []\n",
    "        no_temp_name_yet = []\n",
    "        \n",
    "        for i in range(steps):\n",
    "            step_dfs = []\n",
    "            if i == 0:\n",
    "                step = mega_dictionary['mir_df']\n",
    "            if 0 < i < int(steps-2):\n",
    "                step = mega_dictionary[str(species[i-1])]['step_' + str(i)]\n",
    "                step_df1 = mega_dictionary[str(species[i-1])]['step_' + str(i-1)]\n",
    "                step_df2 = mega_dictionary[str(species[i-1])][str('annotated_' + str(names[i-1]))]\n",
    "                step_df3 = mega_dictionary[str(species[i-1])]['step_' + str(i)]\n",
    "                step_list = [step_df1, step_df2, step_df3]\n",
    "                step_dfs.append(step_list)\n",
    "            if i == int(steps-2):\n",
    "                rest = mega_dictionary[str(species[i-1])]['step_' + str(i-1)]\n",
    "                rest = rest[rest.species != 'temp']\n",
    "                rest = rest[['#Locus', 'Name', 'MajorRNA', 'Reads', 'MIRNA']]\n",
    "                df = dfs[names[i]]\n",
    "                rest = pd.merge(df, rest,\n",
    "                                how = 'right', on = 'MajorRNA')\n",
    "                mega_dictionary.update({'no name': rest})\n",
    "                no_temp_name_yet.append(rest)\n",
    "                break\n",
    "            \n",
    "            test_df2 = step\n",
    "            df = dfs[names[i]]\n",
    "            \n",
    "            localname = 'step_' + str(i)\n",
    "            localdf = localname\n",
    "            localdf = pd.merge(df, test_df2, how = 'right', on = 'MajorRNA')\n",
    "            \n",
    "            localname2 = str('annotated_' + str(names[i]))\n",
    "            annotated_names.append(localname2)\n",
    "            localdf2 = localname2\n",
    "            localdf2 = localdf\n",
    "            localdf2 = localdf2[localdf2.species == str(species[i])]\n",
    "            \n",
    "            localname3 = 'step_' + str(i + 1)\n",
    "            localdf3 = localname3\n",
    "            localdf3 = localdf\n",
    "            localdf3 = localdf3[localdf3.species != str(species[i])]\n",
    "            localdf3 = localdf3.drop(['ID', 'species'], axis = 1)\n",
    "            \n",
    "            mega_dictionary.update({str(species[i]): {localname: localdf}}) #mega_dic.update({str(species[i]): {localname2: localdf2}})#mega_dic.update({str(species[i]): {localname3: localdf3}})\n",
    "            mega_dictionary[str(species[i])][localname2] = localdf2\n",
    "            mega_dictionary[str(species[i])][localname3] = localdf3\n",
    "        \n",
    "        return mega_dictionary\n",
    "        \n",
    "    \n",
    "    def annotate_mirna_shs(self):\n",
    "        plant = self.plant\n",
    "        steps = len(species)-2\n",
    "        annotated_dict = {}\n",
    "        for i in range(steps):\n",
    "            annotated_dict[annotated_names[i]] = mega_dictionary[species[i]][annotated_names[i]]\n",
    "        annotated_list = [v for k,v in annotated_dict.items()]\n",
    "        annotate_all = pd.concat(annotated_list)\n",
    "        annotate_all = annotate_all.reset_index(drop = True)\n",
    "        annotate_all.to_csv('annotated_all_' + plant + '.txt', index = False)\n",
    "        print(annotate_all)\n",
    "\n"
   ]
  },
